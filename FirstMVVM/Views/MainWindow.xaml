<Window x:Class="FirstMVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstMVVM.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="265.117" Width="375" Background="White">
    <Grid>
        <Label Content="Fornavn:" HorizontalAlignment="Left" Margin="49,45,0,0" VerticalAlignment="Top"/>
        <ComboBox IsEditable="True" x:Name="FN" HorizontalAlignment="Left" Height="23" Margin="144,49,0,0" Text="{Binding ImportantPersons}" VerticalAlignment="Top" Width="162"/>
        <ComboBox IsEditable="True" x:Name="LN" HorizontalAlignment="Left" Height="23" Margin="144,81,0,0" Text="{Binding ImportantPerson.LastName}" VerticalAlignment="Top" Width="162"/>
        <Label Content="Efternavn:" HorizontalAlignment="Left" Margin="49,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Fulde navn:" HorizontalAlignment="Left" Margin="49,131,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="FLN" HorizontalAlignment="Left" Margin="144,138,0,0" TextWrapping="Wrap" Text="{Binding ImportantPerson.FullName}" VerticalAlignment="Top" Width="162" Foreground="Black" Background="#FFF1F1F1" Height="17"/>
        
    </Grid>
</Window>
